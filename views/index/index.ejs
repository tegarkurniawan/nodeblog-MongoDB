<%- include layouts/header.ejs %>
<%- include layouts/navbar.ejs %>

<div class="container">
	<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    NodeBlog Mongo
                   
                </h1>

               <% artikels.forEach(function (artikel) { %>

	                <h2>
	                    <a href="#"><%= artikel.title %></a>
	                </h2>
	                <hr>
	                <img class="img-responsive" src="/files/<%= artikel.photo %>" alt="">
	                <hr>
	                <p><%= artikel.description.substring(0, 150); %>...</p>
	                <a class="btn btn-primary" href="/readmore/<%= artikel.title %>">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

	                <hr>

                <% }); %>
               

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                       
                         <div class="col-lg-6">
                            <ul class="list-unstyled">
                            	<% categorys.forEach(function (category) { %>
                                	
                                	<li><a href="#"><%= category.name %></a></li>

                                <% }); %>
                            </ul>
                        </div>
                        
                        
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
               

            </div>

        </div>
        <!-- /.row -->
	
</div>

<%- include layouts/footer.ejs %>
