<%- include layouts/header.ejs %>
<%- include layouts/nav.ejs %>

<div class="container">
	<h1>Edit Artikel</h1>

	<br><br>
	<form method="POST" action="/artikel/update/<%= artikel[0].id %>" enctype="multipart/form-data">
		
		<div class="form-group">
			<input type="text" name="title" value="<%= artikel[0].title %>" placeholder="Title..." class="form-control">
		</div>

		<div class="form-group">
			<textarea name="description" class="form-control" placeholder="Description..."><%= artikel[0].description %></textarea>
		</div>

		<div class="form-group">
			<select name="category_id" class="form-control">
				<option value="<%= artikel[0].category_id.id %>"><%= artikel[0].category_id.name %></option>
				<% categorys.forEach(function (category) { %>
			    	<option value="<%= category.id %>"><%= category.name %></option>
			    <% }); %>
			</select>
		</div>

		<div class="form-group">
			<input type="file" value="<%= artikel[0].photo %>" name="photo" class="form-control">
		</div>

		<div class="form-group">
			<input type="submit" name="submit" value="Submit" class="btn btn-success">
		</div>

	</form>

</div>

<%- include layouts/footer.ejs %>
